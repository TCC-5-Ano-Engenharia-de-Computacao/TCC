<StateMachine initialState="Falling">
    <State id="Idle">
        <OnEnter>
            <PlayAnimationClipAction animationClipAddress="Animations/Idle"/>
            <JumpPlayerAction force="50"/>
        </OnEnter>

        <OnStay>
            <!-- Idle: sem movimento -->
            <!-- <MovePlayerAction speed="1" direction="right"/> -->
        </OnStay>

        <Transitions>
            <Transition to="Falling">
                <Conditions>
                    <PlayerIsFallingCondition/>
                    <PlayerIsNotGroundedCondition/>
                </Conditions>
            </Transition>
        </Transitions>
    </State>

    <State id="Falling">
        <OnEnter>
            <PlayAnimationClipAction animationClipAddress="Animations/Falling"/>
        </OnEnter>

        <Transitions>
            <Transition to="Idle">
                <Conditions>
                    <PlayerIsGroundedCondition/>
                    <PlayerIsNotFallingCondition/>
                </Conditions>
            </Transition>
        </Transitions>
    </State>
</StateMachine>
